{
  "name": "omni-ai-assistant",
  "displayName": "OMNI AI Assistant",
  "description": "Modular AI development assistant with multi-agent support",
  "version": "0.1.0",
  "publisher": "omni",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "assistant",
    "agents",
    "copilot",
    "llm"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "omni.startChat",
        "title": "OMNI: Start Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "omni.stopBackend",
        "title": "OMNI: Stop Backend"
      },
      {
        "command": "omni.restartBackend",
        "title": "OMNI: Restart Backend"
      },
      {
        "command": "omni.selectAgent",
        "title": "OMNI: Select Agent"
      },
      {
        "command": "omni.enableAgent",
        "title": "Enable Agent",
        "icon": "$(check)"
      },
      {
        "command": "omni.disableAgent",
        "title": "Disable Agent",
        "icon": "$(circle-slash)"
      },
      {
        "command": "omni.refreshAgents",
        "title": "Refresh Agents",
        "icon": "$(refresh)"
      },
      {
        "command": "omni.newSession",
        "title": "New Chat Session",
        "icon": "$(add)"
      },
      {
        "command": "omni.loadSession",
        "title": "Load Session"
      },
      {
        "command": "omni.deleteSession",
        "title": "Delete Session",
        "icon": "$(trash)"
      },
      {
        "command": "omni.exportSession",
        "title": "Export Session",
        "icon": "$(export)"
      },
      {
        "command": "omni.clearHistory",
        "title": "Clear All History",
        "icon": "$(clear-all)"
      },
      {
        "command": "omni.openSettings",
        "title": "OMNI: Open Settings"
      },
      {
        "command": "omni.explainCode",
        "title": "OMNI: Explain Selected Code"
      },
      {
        "command": "omni.reviewCode",
        "title": "OMNI: Review Selected Code"
      },
      {
        "command": "omni.generateCode",
        "title": "OMNI: Generate Code"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "omni-sidebar",
          "title": "OMNI AI",
          "icon": "$(hubot)"
        }
      ]
    },
    "views": {
      "omni-sidebar": [
        {
          "type": "webview",
          "id": "omni.chatView",
          "name": "Chat"
        },
        {
          "id": "omni.agentsView",
          "name": "Agents"
        },
        {
          "id": "omni.historyView",
          "name": "History"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "omni.explainCode",
          "when": "editorHasSelection",
          "group": "omni@1"
        },
        {
          "command": "omni.reviewCode",
          "when": "editorHasSelection",
          "group": "omni@2"
        }
      ],
      "view/title": [
        {
          "command": "omni.selectAgent",
          "when": "view == omni.chatView",
          "group": "navigation"
        },
        {
          "command": "omni.refreshAgents",
          "when": "view == omni.agentsView",
          "group": "navigation"
        },
        {
          "command": "omni.newSession",
          "when": "view == omni.historyView",
          "group": "navigation"
        },
        {
          "command": "omni.clearHistory",
          "when": "view == omni.historyView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "omni.enableAgent",
          "when": "view == omni.agentsView && viewItem == agent-disabled",
          "group": "inline"
        },
        {
          "command": "omni.disableAgent",
          "when": "view == omni.agentsView && viewItem == agent-enabled",
          "group": "inline"
        },
        {
          "command": "omni.selectAgent",
          "when": "view == omni.agentsView && viewItem =~ /^agent-/",
          "group": "1_actions@1"
        },
        {
          "command": "omni.enableAgent",
          "when": "view == omni.agentsView && viewItem == agent-disabled",
          "group": "1_actions@2"
        },
        {
          "command": "omni.disableAgent",
          "when": "view == omni.agentsView && viewItem == agent-enabled",
          "group": "1_actions@2"
        },
        {
          "command": "omni.loadSession",
          "when": "view == omni.historyView && viewItem == session",
          "group": "1_actions@1"
        },
        {
          "command": "omni.exportSession",
          "when": "view == omni.historyView && viewItem == session",
          "group": "1_actions@2"
        },
        {
          "command": "omni.deleteSession",
          "when": "view == omni.historyView && viewItem == session",
          "group": "2_danger@1"
        }
      ]
    },
    "configuration": {
      "title": "OMNI AI Assistant",
      "properties": {
        "omni.backend.host": {
          "type": "string",
          "default": "localhost",
          "description": "Backend server host"
        },
        "omni.backend.port": {
          "type": "number",
          "default": 8765,
          "description": "Backend server port"
        },
        "omni.backend.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the backend server"
        },
        "omni.backend.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Path to Python executable. Leave empty to auto-detect venv or use system Python."
        },
        "omni.llm.provider": {
          "type": "string",
          "enum": ["openai", "anthropic", "local"],
          "default": "openai",
          "description": "Default LLM provider"
        },
        "omni.llm.model": {
          "type": "string",
          "default": "",
          "description": "Default model (leave empty for provider default)"
        },
        "omni.agents.default": {
          "type": "string",
          "default": "assistant",
          "description": "Default agent to use"
        },
        "omni.chat.maxHistory": {
          "type": "number",
          "default": 50,
          "description": "Maximum chat history to retain"
        },
        "omni.features.streaming": {
          "type": "boolean",
          "default": true,
          "description": "Enable streaming responses"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:vscode": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "ws": "^8.16.0"
  }
}
